<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="clothes.puyan.tw.mushroom.MyClosetActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentTop="true"
        android:background="@color/standard_yellow"
        android:layout_marginBottom="
        5dp"
        android:id="@+id/rlMyClosetNavigationbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="我的衣櫃"
            android:textColor="#ffff833e"
            android:textSize="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/myclosetIcon"
            android:layout_toEndOf="@+id/myclosetIcon" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/myclosetIcon"
            android:background="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跟香菇說"
        android:id="@+id/btnBooking"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="15dp"
        android:textColor="#ffff833e" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/rlMyClosetNavigationbar"
        android:layout_above="@+id/btnBooking"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llMyClosetContainer"></LinearLayout>
    </ScrollView>
</RelativeLayout>
